<UserControl
    x:Class="AinAlAtaaFoundation.Features.Management.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AinAlAtaaFoundation.Features.Management"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:ClassModifier="internal"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="Border">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#686de0" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="BorderBrush" Value="LightGray" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">
            <ContentControl Content="{Binding ClansView}" />

        </Border>
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">
            <ContentControl Content="{Binding BranchesView}" />
        </Border>

        <Border
            Grid.Row="0"
            Grid.Column="2"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">
            <ContentControl Content="{Binding BranchRepresentativesView}" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">
            <ContentControl Content="{Binding DistrictsView}" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">
            <ContentControl Content="{Binding DistrictRepresentativesView}" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="2"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">
            <ContentControl Content="{Binding AssociationRepresentativesView}" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Padding="5"
            BorderThickness="1"
            CornerRadius="5">
            <ContentControl Content="{Binding UsersView}" />
        </Border>

        <!--<Border
        Grid.Row="1"
        Grid.Column="2"
        Margin="5"
        Padding="5"
        BorderThickness="1"
        CornerRadius="5">
        <ContentControl Content="{Binding FeaturedPointsView}" />
        </Border>-->

    </Grid>

</UserControl>
