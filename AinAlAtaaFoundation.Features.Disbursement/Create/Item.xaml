<UserControl
    x:Class="AinAlAtaaFoundation.Features.DisbursementManagement.Create.Item"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AinAlAtaaFoundation.Features.DisbursementManagement.Create"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="root"
    mc:Ignorable="d">

    <StackPanel MinWidth="200" >

        <TextBlock
            Padding="5"
            Foreground="{StaticResource Blue}"
            Text="{Binding ElementName=root, Path=Title}" />
        <Border
            Height="50"
            Padding="10"
            Background="White"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="5">
            <TextBlock VerticalAlignment="Center" Text="{Binding ElementName=root, Path=Value}" />
        </Border>

    </StackPanel>

</UserControl>
