<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<AssemblyVersion>0.1.0</AssemblyVersion>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="Converters\**" />
		<Compile Remove="Tajawal\**" />
		<EmbeddedResource Remove="Converters\**" />
		<EmbeddedResource Remove="Tajawal\**" />
		<None Remove="Converters\**" />
		<None Remove="Tajawal\**" />
		<Page Remove="Converters\**" />
		<Page Remove="Tajawal\**" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Images\excel.png" />
	  <None Remove="Images\pdf.png" />
	  <None Remove="Images\preview.png" />
	  <None Remove="Images\printout.png" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="BarcodeLib" Version="3.1.3" />
		<PackageReference Include="BoldReports.WPF" Version="6.1.48" />
		<PackageReference Include="HandyControls" Version="3.5.3" />
		<PackageReference Include="SharpVectors.Wpf" Version="1.8.4.2" />
		<PackageReference Include="Syncfusion.SfBarcode.WPF" Version="26.2.5" />
		<PackageReference Include="Syncfusion.SfBusyIndicator.WPF" Version="26.2.5" />
		<PackageReference Include="Syncfusion.SfGrid.WPF" Version="26.2.5" />
		<PackageReference Include="Syncfusion.SfSkinManager.WPF" Version="26.2.5" />
		<PackageReference Include="Syncfusion.Shared.WPF" Version="26.2.5" />
		<PackageReference Include="Syncfusion.Themes.Windows11Light.WPF" Version="26.2.5" />
		<PackageReference Include="System.Text.Json" Version="8.0.4" />
		<PackageReference Include="System.Text.RegularExpressions" Version="4.3.1" />
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="Images\excel.png">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </Resource>
	  <Resource Include="Images\pdf.png" />
	  <Resource Include="Images\preview.png" />
	  <Resource Include="Images\printout.png" />
	</ItemGroup>

	<ItemGroup>
		<None Update="Images\logo-100.png">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Images\logo-200.png">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Images\logo.png">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
