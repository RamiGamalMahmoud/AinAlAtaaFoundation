<UserControl
    x:Class="AinAlAtaaFoundation.Features.FamiliesManagement.Listing.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:helpes="clr-namespace:AinAlAtaaFoundation.Shared.Helpers;assembly=AinAlAtaaFoundation.Shared"
    xmlns:local="clr-namespace:AinAlAtaaFoundation.Features.FamiliesManagement.Listing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    x:ClassModifier="internal"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Command="{Binding ViewAllCommand}"
                Content="عرض الكل"
                Cursor="Hand"
                Style="{StaticResource ButtonInfo}" />

            <hc:ComboBox
                Grid.Column="1"
                Width="120"
                Margin="10,0"
                VerticalAlignment="Center"
                hc:InfoElement.Placeholder="العشيرة"
                hc:InfoElement.ShowClearButton="True"
                helpes:SelectionChangedBehaviour.Command="{Binding FilterCommand}"
                Cursor="Hand"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Clans}"
                SelectedItem="{Binding Clan, UpdateSourceTrigger=PropertyChanged}"
                SelectedValue="{Binding Clan.Id}"
                SelectedValuePath="Id" />

            <hc:ComboBox
                Grid.Column="2"
                Width="150"
                Margin="10,0"
                VerticalAlignment="Center"
                hc:InfoElement.Placeholder="الفخذ"
                hc:InfoElement.ShowClearButton="True"
                helpes:SelectionChangedBehaviour.Command="{Binding FilterCommand}"
                Cursor="Hand"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Branches}"
                SelectedItem="{Binding Branch, UpdateSourceTrigger=PropertyChanged}"
                SelectedValue="{Binding Branch.Id}"
                SelectedValuePath="Id" />

            <hc:ComboBox
                Grid.Column="3"
                Width="150"
                Margin="10,0"
                VerticalAlignment="Center"
                hc:InfoElement.Placeholder="ممثل الفخذ"
                hc:InfoElement.ShowClearButton="True"
                helpes:SelectionChangedBehaviour.Command="{Binding FilterCommand}"
                Cursor="Hand"
                DisplayMemberPath="Name"
                ItemsSource="{Binding BranchRepresentatives}"
                SelectedItem="{Binding BranchRepresentative, UpdateSourceTrigger=PropertyChanged}"
                SelectedValue="{Binding BranchRepresentative.Id}"
                SelectedValuePath="Id" />

            <hc:ComboBox
                Grid.Column="4"
                Width="120"
                Margin="10,0"
                VerticalAlignment="Center"
                hc:InfoElement.Placeholder="نوع العائلة"
                hc:InfoElement.ShowClearButton="True"
                helpes:SelectionChangedBehaviour.Command="{Binding FilterCommand}"
                Cursor="Hand"
                DisplayMemberPath="Name"
                ItemsSource="{Binding FamilyTypes}"
                SelectedItem="{Binding FamilyType, UpdateSourceTrigger=PropertyChanged}"
                SelectedValue="{Binding FamilyType.Id}"
                SelectedValuePath="Id" />

            <hc:ComboBox
                Grid.Column="5"
                Width="120"
                Margin="10,0"
                VerticalAlignment="Center"
                hc:ComboBoxAttach.IsMouseWheelEnabled="true"
                hc:InfoElement.Placeholder="الحالة الإجتماعية"
                hc:InfoElement.ShowClearButton="True"
                helpes:SelectionChangedBehaviour.Command="{Binding FilterCommand}"
                Cursor="Hand"
                DisplayMemberPath="Name"
                ItemsSource="{Binding SocialStatuses}"
                SelectedItem="{Binding SocialStatus, UpdateSourceTrigger=PropertyChanged}"
                SelectedValue="{Binding SocialStatus.Id}"
                SelectedValuePath="Id" />


            <Button
                Grid.Column="10"
                HorizontalAlignment="Right"
                Command="{Binding ShowCreateCommand}"
                Content="إضافة"
                Cursor="Hand"
                FontFamily="Arial"
                FontWeight="Bold"
                Style="{StaticResource ButtonPrimary}" />
        </Grid>


        <DataGrid
            Grid.Row="1"
            d:ItemsSource="{d:SampleData}"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding Families}">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                <DataGridTextColumn Binding="{Binding Name}" Header="اسم العائلة" />
                <DataGridTextColumn Binding="{Binding FamilyType.Name}" Header="(عام / خاص)" />
                <DataGridTextColumn Binding="{Binding Clan.Name}" Header="العشيرة" />
                <DataGridTextColumn Binding="{Binding Applicant.Name}" Header="الاسم" />
                <DataGridTextColumn Binding="{Binding RationCard}" Header="رقم البطاقة التموينية" />
                <DataGridTextColumn Binding="{Binding RationCardOwnerName}" Header="اسم صاحب البطاقة التموينية" />
                <DataGridTextColumn Binding="{Binding BranchRepresentative.Name}" Header="ممثل الفخذ" />
                <DataGridTextColumn Binding="{Binding Address.District.Name}" Header="الحي" />
                <DataGridTextColumn Binding="{Binding Address.Street}" Header="الشارع" />
                <DataGridTextColumn Binding="{Binding Address.FeaturedPoint.Name}" Header="أقرب نقطة دالة" />
                <DataGridTextColumn Binding="{Binding DistrictRepresentative.Name}" Header="اسم المختار" />

                <DataGridTextColumn Binding="{Binding SocialStatus.Name}" Header="الحالة الإجتماعية" />

                <DataGridTemplateColumn Header="خيارات">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=DataContext.ShowUpdateCommand}"
                                    CommandParameter="{Binding}"
                                    Content="تعديل"
                                    Cursor="Hand"
                                    FontFamily="Arial"
                                    FontSize="10"
                                    FontWeight="Bold"
                                    Style="{StaticResource ButtonInfo}" />

                                <Button
                                    Margin="10,0,0,0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=DataContext.ShowPrintCommand}"
                                    CommandParameter="{Binding}"
                                    Content="طباعة العائلة"
                                    Cursor="Hand"
                                    Style="{StaticResource ButtonSuccess}" />

                                <Button
                                    Margin="10,0,0,0"
                                    Background="{StaticResource Blue-Light}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=DataContext.PrintBarcodeCommand}"
                                    CommandParameter="{Binding}"
                                    Content="طباعة الباركود"
                                    Cursor="Hand"
                                    FontFamily="Arial"
                                    FontSize="10"
                                    FontWeight="Bold"
                                    Style="{StaticResource ButtonPrimary}" />

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>
