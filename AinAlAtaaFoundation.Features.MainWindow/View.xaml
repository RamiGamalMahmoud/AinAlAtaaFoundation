                        Height="auto"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Content="{Binding AppState.User.UserName}"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource Blue}" />


