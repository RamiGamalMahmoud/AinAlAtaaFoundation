<Window
    x:Class="AinAlAtaaFoundation.Features.MainWindow.View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AinAlAtaaFoundation.Features.MainWindow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="مؤسسة عين العطاء للإغاثة و التنمية"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    FontFamily="Arial"
    FontSize="16"
    FontWeight="Bold"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Border Padding="5" FlowDirection="RightToLeft">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <ContentControl
                Grid.RowSpan="2"
                Grid.Column="1"
                Content="{Binding CurrentView}" />

            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="10"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="5">
                <Grid MinWidth="100" HorizontalAlignment="Center">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="{Binding LogoPath}" />


                    <StackPanel Grid.Row="1" Visibility="{Binding AppState.User.IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button
                            Width="auto"
                            Height="40"
                            HorizontalAlignment="Stretch"
                            Command="{Binding GoToManagementCommand}"
                            Content="إدارة"
                            Cursor="Hand"
                            FontFamily="Arial"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{StaticResource ButtonPrimary}" />
                        <Button
                            Width="auto"
                            Height="40"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            Command="{Binding GoToFamiliesCommand}"
                            Content="العائلات"
                            Cursor="Hand"
                            FontFamily="Arial"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{StaticResource ButtonPrimary}" />

                        <Button
                            Width="auto"
                            Height="40"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            Command="{Binding GoToFamilyMembersCommand}"
                            Content="أفراد العائلات"
                            Cursor="Hand"
                            FontFamily="Arial"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{StaticResource ButtonPrimary}" />


                    </StackPanel>

                    <StackPanel Grid.Row="2">

                        <Button
                            Grid.Row="2"
                            Width="auto"
                            Height="40"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            Command="{Binding GoToDisbursementCommand}"
                            Content="سجل الصرف"
                            Cursor="Hand"
                            FontFamily="Arial"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{StaticResource ButtonPrimary}" />
                        <Button
                            Grid.Row="3"
                            Width="auto"
                            Height="40"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            Command="{Binding LogoutCommand}"
                            Content="خروج"
                            Cursor="Hand"
                            FontFamily="Arial"
                            FontSize="16"
                            FontWeight="Bold"
                            Style="{StaticResource ButtonPrimary}" />

                    </StackPanel>



                    <Label
                        Grid.Row="4"
                        Height="auto"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Content="{Binding AppState.User.UserName}"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource Blue}" />


                </Grid>
            </Border>

        </Grid>
    </Border>

</Window>
